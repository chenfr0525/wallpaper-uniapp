.layout {
  width: 100%;
  padding: 10rpx 30rpx;
}
.layout .title {
  display: flex;
  margin-bottom: 30rpx;
}
.layout .title .tag {
  transform: scale(0.8);
  transform-origin: left center;
  flex-shrink: 0;
}
.layout .title .titleContent {
  font-size: 40rpx;
  line-height: 1.6em;
}
.layout .info {
  display: flex;
  font-size: 30rpx;
  color: #999;
}
.layout .info .item {
  margin-right: 30rpx;
}
.layout .content {
  padding: 50rpx 0;
}
.layout .count {
  font-size: 28rpx;
  color: #999;
}
.loadingLayout {
  padding: 30rpx 0;
}